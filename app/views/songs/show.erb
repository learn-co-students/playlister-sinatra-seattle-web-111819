<%= "<h2>#{flash[:message]}</h2>" if flash[:message] %>

<h2>Song:</h2>
<p>Name: <%= @song.name %></p>
<br>
<h2>Artist:</h2>
<%= "<a href='/artists/#{@artist.slug}'>"%><%= @artist.name %></a><br>
<br>
<h2>Genres:</h2>
<% @genres.each do |genre| %>
    <%= "<a href='/genres/#{genre.slug}'>"%><%= genre.name %></a><br>
<% end %>